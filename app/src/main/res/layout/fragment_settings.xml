<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tv_label_begin_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/begin_date"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/tv_begin_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_label_begin_date"
        android:layout_alignBottom="@+id/tv_label_begin_date"
        android:layout_alignTop="@+id/tv_label_begin_date"
        tools:text="Begin Date"/>

    <TextView
        android:id="@+id/tv_label_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_date"
        android:layout_margin="5dp"
        android:layout_below="@+id/tv_label_begin_date"
        />

    <TextView
        android:id="@+id/tv_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_label_end_date"
        android:layout_alignBottom="@+id/tv_label_end_date"
        android:layout_alignTop="@+id/tv_label_end_date"
        android:layout_below="@+id/tv_begin_date"
        tools:text="End Date"/>



</RelativeLayout>